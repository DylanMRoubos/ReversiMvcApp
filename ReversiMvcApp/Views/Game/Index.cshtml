@model IEnumerable<ReversiMvcApp.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    No game available to your liking? Create one <a asp-action="Create">Here</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerToken1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>   
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerToken1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>           
            <td>
                <a asp-action="Details" asp-route-id="@item.Token">Join game</a>
            </td>
        </tr>
}
    </tbody>
</table>
